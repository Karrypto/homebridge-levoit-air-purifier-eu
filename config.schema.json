{
  "pluginAlias": "LevoitAirPurifiers",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Levoit Air Purifiers"
      },
      "email": {
        "title": "Email",
        "type": "string",
        "required": true,
        "description": "VeSync's account email."
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "description": "VeSync's account password"
      },
      "countryCode": {
        "title": "Country Code",
        "type": "string",
        "default": "US",
        "description": "Wichtig für internationale Accounts. EU-Accounts nutzen typischerweise den EU-Endpoint. Beispiel: DE"
      },
      "vesyncAppVersion": {
        "title": "VeSync App Version (Advanced)",
        "type": "string",
        "default": "5.7.60",
        "description": "Override der VeSync App-Version. Falls Login fehlschlägt mit 'app version is too low', hier erhöhen (z.B. 5.8.0)."
      },
      "vesyncDeviceId": {
        "title": "VeSync Device ID / devToken (Advanced)",
        "type": "string",
        "description": "Optional: feste Device-ID (devToken) für den Login. Standard ist eine stabile, aus der Email abgeleitete ID."
      },
      "enableDebugMode": {
        "title": "Enable Debug Mode",
        "type": "boolean",
        "default": false,
        "description": "Enable detailed logging for troubleshooting."
      },
      "experimentalFeatures": {
        "title": "Experimental Features",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "title": "Feature",
          "type": "string",
          "enum": ["DeviceDisplay", "Humidifiers"]
        }
      }
    }
  }
}
